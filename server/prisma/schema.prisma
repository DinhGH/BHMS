generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  passwordHash String?
  fullName     String?
  provider     String?
  role         User_role
  status       User_status    @default(ACTIVE)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  imageUrl     String?
  active       UserActive     @default(YES)
  otp          String?        @db.VarChar(6)
  otpExpire    DateTime?
  licenseKey   LicenseKey?
  Notification Notification[]
  owner        Owner?
  Report       Report[]
}

model LicenseKey {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
}

model BoardingHouse {
  id          Int      @id @default(autoincrement())
  ownerId     Int
  name        String
  address     String
  electricFee Float
  waterFee    Float
  imageUrl    String?
  createdAt   DateTime @default(now())
  owner       Owner    @relation(fields: [ownerId], references: [id])
  rooms       Room[]

  @@index([ownerId], map: "BoardingHouse_ownerId_fkey")
}

model Room {
  id                 Int              @id @default(autoincrement())
  houseId            Int
  name               String
  price              Float
  isLocked           Boolean          @default(false)
  imageUrl           String?
  electricMeterAfter Float            @default(0)
  electricMeterNow   Float            @default(0)
  waterMeterAfter    Float            @default(0)
  waterMeterNow      Float            @default(0)
  createdAt          DateTime         @default(now())
  contractEnd        DateTime?
  contractStart      DateTime?
  Invoice            Invoice[]
  RentalContract     RentalContract[]
  house              BoardingHouse    @relation(fields: [houseId], references: [id])
  roomServices       RoomService[]
  Tenant             Tenant[]

  @@index([houseId], map: "Room_houseId_fkey")
}

model Service {
  id           Int               @id @default(autoincrement())
  name         String            @unique
  description  String?
  price        Float
  priceType    Service_priceType @default(FIXED)
  unit         String?
  isActive     Boolean           @default(true)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime
  roomServices RoomService[]
}

model RoomService {
  id        Int      @id @default(autoincrement())
  roomId    Int?
  serviceId Int
  price     Float
  quantity  Int?      @default(1)
  totalPrice Float    @default(0)
  createdAt DateTime @default(now())

  room    Room    @relation(fields: [roomId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([roomId, serviceId])
  @@index([roomId])
  @@index([serviceId], map: "RoomService_serviceId_fkey")
}

model Invoice {
  id           Int           @id @default(autoincrement())
  roomId       Int
  tenantId     Int
  roomPrice    Float
  electricCost Float
  waterCost    Float
  serviceCost  Float
  totalAmount  Float
  status       InvoiceStatus @default(PENDING)
  month        Int
  year         Int
  createdAt    DateTime      @default(now())

  room     Room     @relation(fields: [roomId], references: [id])
  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  payments Payment[]

  @@unique([roomId, month, year])
}

model Payment {
  id         Int           @id @default(autoincrement())
  invoiceId  Int
  method     PaymentMethod
  amount     Float
  proofImage String?
  confirmed  Boolean       @default(false)
  createdAt  DateTime      @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  content   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Report {
  id        Int          @id @default(autoincrement())
  senderId  Int
  target    String
  content   String
  images    Json?
  status    ReportStatus @default(PENDING)
  createdAt DateTime     @default(now())

  sender User @relation(fields: [senderId], references: [id])
}

model ReportAdmin {
  id        Int          @id @default(autoincrement())
  senderId  Int
  target    String
  content   String
  images    Json?
  status    ReportStatus @default(REVIEWING)
  createdAt DateTime     @default(now())

  sender Owner @relation(fields: [senderId], references: [id])

  @@index([senderId], map: "ReportAdmin_senderId_fkey")
}

model LicenseKey {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Subscription {
  id          Int                @id @default(autoincrement())
  plan        SubscriptionPlan
  amount      Float
  currency    String             @default("VND")
  status      SubscriptionStatus @default(ACTIVE)
  purchasedAt DateTime           @default(now())
  periodStart DateTime
  periodEnd   DateTime
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
}
