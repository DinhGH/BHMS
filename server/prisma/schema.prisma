generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  passwordHash  String?
  fullName      String?
  provider      String?
  role          Role
  status        User_status    @default(NO_RENTING)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  active        User_active    @default(YES)
  avatar        String?
  gender        String
  hometown      String?
  otp           String?        @db.VarChar(6)
  otpExpire     DateTime?
  phone         String
  notifications Notification[]
  owner         Owner?
  reports       Report[]
  tenant        Tenant?

  @@index([email])
}

model Owner {
  id     Int             @id @default(autoincrement())
  userId Int             @unique
  houses BoardingHouse[]
  user   User            @relation(fields: [userId], references: [id])
}

model Tenant {
  id        Int              @id @default(autoincrement())
  userId    Int              @unique
  invoices  Invoice[]
  contracts RentalContract[]
  user      User             @relation(fields: [userId], references: [id])
}

model BoardingHouse {
  id          Int      @id @default(autoincrement())
  ownerId     Int
  name        String
  address     String
  electricFee Float
  waterFee    Float
  services    Json?
  createdAt   DateTime @default(now())
  image       String?
  owner       Owner    @relation(fields: [ownerId], references: [id])
  rooms       Room[]

  @@index([ownerId], map: "BoardingHouse_ownerId_fkey")
}

model Room {
  id            Int              @id @default(autoincrement())
  houseId       Int
  name          String
  price         Float
  isLocked      Boolean          @default(false)
  electricMeter Float            @default(0)
  waterMeter    Float            @default(0)
  createdAt     DateTime         @default(now())
  image         String?
  invoices      Invoice[]
  contracts     RentalContract[]
  house         BoardingHouse    @relation(fields: [houseId], references: [id])

  @@index([houseId], map: "Room_houseId_fkey")
}

model Invoice {
  id           Int           @id @default(autoincrement())
  roomId       Int
  tenantId     Int
  roomPrice    Float
  electricCost Float
  waterCost    Float
  serviceCost  Float
  totalAmount  Float
  status       InvoiceStatus @default(PENDING)
  month        Int
  year         Int
  createdAt    DateTime      @default(now())
  room         Room          @relation(fields: [roomId], references: [id])
  tenant       Tenant        @relation(fields: [tenantId], references: [id])
  payments     Payment[]

  @@unique([roomId, month, year])
  @@index([tenantId], map: "Invoice_tenantId_fkey")
}

model Payment {
  id         Int           @id @default(autoincrement())
  invoiceId  Int
  method     PaymentMethod
  amount     Float
  proofImage String?
  confirmed  Boolean       @default(false)
  createdAt  DateTime      @default(now())
  invoice    Invoice       @relation(fields: [invoiceId], references: [id])

  @@index([invoiceId], map: "Payment_invoiceId_fkey")
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  content   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "Notification_userId_fkey")
}

model Report {
  id        Int          @id @default(autoincrement())
  senderId  Int
  target    String
  content   String
  images    Json?
  status    ReportStatus @default(PENDING)
  createdAt DateTime     @default(now())
  sender    User         @relation(fields: [senderId], references: [id])

  @@index([senderId], map: "Report_senderId_fkey")
}

model RentalContract {
  id          Int      @id @default(autoincrement())
  roomId      Int
  tenantId    Int
  moveInDate  DateTime
  contractEnd DateTime
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  room        Room     @relation(fields: [roomId], references: [id])
  tenant      Tenant   @relation(fields: [tenantId], references: [id])

  @@index([roomId])
  @@index([tenantId])
}

enum Role {
  ADMIN
  OWNER
  TENANT
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
}

enum ReportStatus {
  PENDING
  PROCESSING
  RESOLVED
}

enum PaymentMethod {
  GATEWAY
  QR_TRANSFER
}

enum User_status {
  RENTING
  NO_RENTING
}

enum User_active {
  YES
  NO
}
