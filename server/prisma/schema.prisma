model BoardingHouse {
  id          Int      @id @default(autoincrement())
  ownerId     Int
  name        String
  address     String
  electricFee Float
  waterFee    Float
  imageUrl    String?
  createdAt   DateTime @default(now())
  owner       Owner    @relation(fields: [ownerId], references: [id])
  rooms       Room[]

  @@index([ownerId], map: "BoardingHouse_ownerId_fkey")
}

model Room {
  id                 Int              @id @default(autoincrement())
  houseId            Int?
  name               String
  price              Float
  isLocked           Boolean          @default(false)
  imageUrl           String?
  electricMeterAfter Float            @default(0)
  electricMeterNow   Float            @default(0)
  waterMeterAfter    Float            @default(0)
  waterMeterNow      Float            @default(0)
  createdAt          DateTime         @default(now())
  contractEnd        DateTime?
  contractStart      DateTime?
  Invoice            Invoice[]
  RentalContract     RentalContract[]
  house              BoardingHouse?   @relation(fields: [houseId], references: [id])
  roomServices       RoomService[]
  Tenant             Tenant[]

  @@index([houseId], map: "Room_houseId_fkey")
}

model Service {
  id           Int               @id @default(autoincrement())
  name         String            @unique
  description  String?
  price        Float
  priceType    Service_priceType @default(FIXED)
  unit         String?
  isActive     Boolean           @default(true)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  roomServices RoomService[]
}

model RoomService {
  id         Int      @id @default(autoincrement())
  roomId     Int?
  serviceId  Int
  price      Float
  createdAt  DateTime @default(now())
  quantity   Int?     @default(1)
  totalPrice Float    @default(0)
  room       Room?    @relation(fields: [roomId], references: [id], onDelete: Cascade)
  service    Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([roomId, serviceId])
  @@index([roomId])
  @@index([serviceId], map: "RoomService_serviceId_fkey")
}

model Tenant {
  id             Int              @id @default(autoincrement())
  age            Int
  createdAt      DateTime         @default(now())
  email          String
  endDate        DateTime?
  fullName       String
  gender         Tenant_gender
  phone          String?
  roomId         Int?
  startDate      DateTime
  imageUrl       String?
  invoices       Invoice[]
  RentalContract RentalContract[]
  Room           Room?            @relation(fields: [roomId], references: [id])

  @@index([roomId])
}

model Invoice {
  id           Int           @id @default(autoincrement())
  roomId       Int
  tenantId     Int
  roomPrice    Float
  electricCost Float
  waterCost    Float
  serviceCost  Float
  totalAmount  Float
  status       InvoiceStatus @default(PENDING)
  month        Int
  year         Int
  createdAt    DateTime      @default(now())
  Room         Room          @relation(fields: [roomId], references: [id])
  Tenant       Tenant        @relation(fields: [tenantId], references: [id])
  payment      Payment[]

  @@unique([roomId, month, year])
  @@index([tenantId], map: "Invoice_tenantId_fkey")
}

model Payment {
  id         Int            @id @default(autoincrement())
  invoiceId  Int
  method     Payment_method
  amount     Float
  proofImage String?
  confirmed  Boolean        @default(false)
  createdAt  DateTime       @default(now())
  invoice    Invoice        @relation(fields: [invoiceId], references: [id])

  @@index([invoiceId], map: "Payment_invoiceId_fkey")
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  content   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "Notification_userId_fkey")
}

model Report {
  id        Int           @id @default(autoincrement())
  senderId  Int
  target    String
  content   String
  images    Json?
  status    Report_status @default(PENDING)
  createdAt DateTime      @default(now())
  User      User          @relation(fields: [senderId], references: [id])

  @@index([senderId], map: "Report_senderId_fkey")
}

model ReportAdmin {
  id        Int                @id @default(autoincrement())
  senderId  Int
  target    String
  content   String
  images    Json?
  status    ReportAdmin_status @default(REVIEWING)
  createdAt DateTime           @default(now())
  Owner     Owner              @relation(fields: [senderId], references: [id])

  @@index([senderId], map: "ReportAdmin_senderId_fkey")
}

model RentalContract {
  id        Int       @id @default(autoincrement())
  tenantId  Int
  roomId    Int
  startDate DateTime
  endDate   DateTime?
  terms     String?
  createdAt DateTime  @default(now())
  Room      Room      @relation(fields: [roomId], references: [id])
  Tenant    Tenant    @relation(fields: [tenantId], references: [id])

  @@index([roomId])
  @@index([tenantId])
}

model Subscription {
  id          Int                 @id @default(autoincrement())
  plan        Subscription_plan
  amount      Float
  currency    String              @default("VND")
  status      Subscription_status @default(ACTIVE)
  purchasedAt DateTime            @default(now())
  periodStart DateTime
  periodEnd   DateTime
  createdAt   DateTime            @default(now())
  updatedAt   DateTime
}

enum UserActive {
  YES
  NO
}

