generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model BoardingHouse {
  id          Int      @id @default(autoincrement())
  ownerId     Int
  name        String
  address     String
  electricFee Float
  waterFee    Float
  services    Json?
  createdAt   DateTime @default(now())
  Owner       Owner    @relation(fields: [ownerId], references: [id])
  Room        Room[]

  @@index([ownerId], map: "BoardingHouse_ownerId_fkey")
}

model Invoice {
  id           Int            @id @default(autoincrement())
  roomId       Int
  tenantId     Int
  roomPrice    Float
  electricCost Float
  waterCost    Float
  serviceCost  Float
  totalAmount  Float
  status       Invoice_status @default(PENDING)
  month        Int
  year         Int
  createdAt    DateTime       @default(now())
  Room         Room           @relation(fields: [roomId], references: [id])
  Tenant       Tenant         @relation(fields: [tenantId], references: [id])
  Payment      Payment[]

  @@unique([roomId, month, year])
  @@index([tenantId], map: "Invoice_tenantId_fkey")
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  content   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "Notification_userId_fkey")
}

model Owner {
  id            Int             @id @default(autoincrement())
  userId        Int             @unique
  BoardingHouse BoardingHouse[]
  User          User            @relation(fields: [userId], references: [id])
}

model Payment {
  id         Int            @id @default(autoincrement())
  invoiceId  Int
  method     Payment_method
  amount     Float
  proofImage String?
  confirmed  Boolean        @default(false)
  createdAt  DateTime       @default(now())
  Invoice    Invoice        @relation(fields: [invoiceId], references: [id])

  @@index([invoiceId], map: "Payment_invoiceId_fkey")
}

model Report {
  id        Int           @id @default(autoincrement())
  senderId  Int
  target    String
  content   String
  images    Json?
  status    Report_status @default(PENDING)
  createdAt DateTime      @default(now())
  User      User          @relation(fields: [senderId], references: [id])

  @@index([senderId], map: "Report_senderId_fkey")
}

model Room {
  id            Int           @id @default(autoincrement())
  houseId       Int
  name          String
  price         Float
  isLocked      Boolean       @default(false)
  electricMeter Float         @default(0)
  waterMeter    Float         @default(0)
  createdAt     DateTime      @default(now())
  Invoice       Invoice[]
  BoardingHouse BoardingHouse @relation(fields: [houseId], references: [id])

  @@index([houseId], map: "Room_houseId_fkey")
}

model Tenant {
  id      Int       @id @default(autoincrement())
  userId  Int       @unique
  Invoice Invoice[]
  User    User      @relation(fields: [userId], references: [id])
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  passwordHash String?
  fullName     String?
  provider     String?
  role         User_role
  status       User_status    @default(ACTIVE)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  Notification Notification[]
  Owner        Owner?
  Report       Report[]
  Tenant       Tenant?
}

enum Payment_method {
  GATEWAY
  QR_TRANSFER
}

enum Report_status {
  PENDING
  PROCESSING
  RESOLVED
}

enum User_role {
  ADMIN
  OWNER
  TENANT
}

enum User_status {
  ACTIVE
  BLOCKED
}

enum Invoice_status {
  PENDING
  PAID
  OVERDUE
}