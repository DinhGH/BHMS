generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

////////////////////
/// ENUMS
////////////////////

enum Role {
  ADMIN
  OWNER
}

enum UserActive {
  YES
  NO
}

enum RoomStatus {
  EMPTY
  OCCUPIED
  LOCKED
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
}

enum PaymentMethod {
  GATEWAY
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum ServiceUnit {
  PER_MONTH
  PER_PERSON
  PER_USAGE
}

////////////////////
/// USER
////////////////////

model User {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  passwordHash String
  role         Role
  active       UserActive @default(YES)

  otp          String?    @db.VarChar(6)
  otpExpire    DateTime?

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  owner        Owner?
  licenseKey   LicenseKey?
}

////////////////////
/// LICENSE KEY
////////////////////

model LicenseKey {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  userId    Int?     @unique

  startAt   DateTime?
  expireAt  DateTime?
  isActive  Boolean  @default(false)

  createdAt DateTime @default(now())
  usedAt    DateTime?

  user User? @relation(fields: [userId], references: [id])
}

////////////////////
/// OWNER
////////////////////

model Owner {
  id     Int      @id @default(autoincrement())
  userId Int      @unique

  user   User     @relation(fields: [userId], references: [id])
  houses BoardingHouse[]
}

////////////////////
/// BOARDING HOUSE
////////////////////

model BoardingHouse {
  id          Int      @id @default(autoincrement())
  ownerId     Int
  name        String
  address     String
  electricFee Float
  waterFee    Float

  createdAt   DateTime @default(now())

  owner Owner @relation(fields: [ownerId], references: [id])
  rooms Room[]

  @@index([ownerId])
}

////////////////////
/// ROOM
////////////////////

model Room {
  id            Int        @id @default(autoincrement())
  houseId       Int
  name          String
  price         Float
  status        RoomStatus @default(EMPTY)

  electricMeter Float      @default(0)
  waterMeter    Float      @default(0)

  createdAt     DateTime   @default(now())

  house        BoardingHouse @relation(fields: [houseId], references: [id])
  tenants      Tenant[]
  invoices     Invoice[]
  roomServices RoomService[]

  @@index([houseId])
}

////////////////////
/// SERVICE
////////////////////

model Service {
  id        Int         @id @default(autoincrement())
  name      String
  unit      ServiceUnit

  createdAt DateTime    @default(now())

  roomServices RoomService[]
}

////////////////////
/// ROOM SERVICE (GIÁ DỊCH VỤ THEO PHÒNG)
////////////////////

model RoomService {
  id        Int      @id @default(autoincrement())
  roomId    Int
  serviceId Int
  price     Float

  createdAt DateTime @default(now())

  room    Room    @relation(fields: [roomId], references: [id])
  service Service @relation(fields: [serviceId], references: [id])

  @@unique([roomId, serviceId])
  @@index([roomId])
}

////////////////////
/// TENANT (KHÔNG LOGIN)
////////////////////

model Tenant {
  id        Int      @id @default(autoincrement())
  roomId    Int

  fullName  String
  email     String
  phone     String?

  gender    Gender
  age       Int

  startDate DateTime
  endDate   DateTime?

  createdAt DateTime @default(now())

  room     Room      @relation(fields: [roomId], references: [id])
  invoices Invoice[]

  @@index([roomId])
}

////////////////////
/// INVOICE
////////////////////

model Invoice {
  id           Int           @id @default(autoincrement())
  roomId       Int
  tenantId     Int

  roomPrice    Float
  electricCost Float
  waterCost    Float
  serviceCost  Float
  totalAmount  Float

  month        Int
  year         Int
  status       InvoiceStatus @default(PENDING)

  createdAt    DateTime @default(now())

  room    Room   @relation(fields: [roomId], references: [id])
  tenant  Tenant @relation(fields: [tenantId], references: [id])
  payment Payment?

  @@unique([roomId, month, year])
  @@index([tenantId])
}

////////////////////
/// PAYMENT
////////////////////

model Payment {
  id         Int           @id @default(autoincrement())
  invoiceId  Int           @unique
  method     PaymentMethod
  amount     Float
  confirmed  Boolean       @default(false)

  createdAt  DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id])
}

////////////////////
/// NOTIFICATION (EMAIL LOG)
////////////////////

model Notification {
  id        Int      @id @default(autoincrement())
  target    String   // email / room / house
  title     String
  content   String
  sentAt    DateTime @default(now())
}
