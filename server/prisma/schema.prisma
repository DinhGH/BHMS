generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  OWNER
  TENANT
}

enum UserStatus {
  ACTIVE
  BLOCKED
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
}

enum ReportStatus {
  PENDING
  PROCESSING
  RESOLVED
  REVIEWING
  FIXING
}

enum PaymentMethod {
  GATEWAY
  QR_TRANSFER
}

enum ServicePriceType {
  FIXED
  UNIT_BASED
  PERCENTAGE
}

enum SubscriptionPlan {
  BASIC
  PREMIUM
  PROFESSIONAL
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  EXPIRED
}

enum Tenant_gender {
  MALE
  FEMALE
  OTHER
}

enum User_active {
  YES
  NO
}

model User {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  passwordHash String?
  fullName     String?
  provider     String?
  role         Role
  status       UserStatus @default(ACTIVE)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  imageUrl     String?
  active       User_active @default(YES)
  otp          String?    @db.VarChar(6)
  otpExpire    DateTime?

  LicenseKey    LicenseKey?
  owner         Owner?
  reports       Report[]
  notifications Notification[]
}

model Owner {
  id           Int             @id @default(autoincrement())
  userId       Int             @unique
  user         User            @relation(fields: [userId], references: [id])
  houses       BoardingHouse[]
  reportAdmins ReportAdmin[]
}

model Tenant {
  id        Int           @id @default(autoincrement())
  age       Int
  createdAt DateTime      @default(now())
  email     String
  endDate   DateTime?
  fullName  String
  gender    Tenant_gender
  phone     String?
  roomId    Int
  startDate DateTime
  imageUrl  String?

  invoices        Invoice[]
  rentalContracts RentalContract[]
  room            Room @relation(fields: [roomId], references: [id])

  @@index([roomId])
}

model BoardingHouse {
  id          Int      @id @default(autoincrement())
  ownerId     Int
  name        String
  address     String
  electricFee Float
  waterFee    Float
  imageUrl    String?
  createdAt   DateTime @default(now())

  owner Owner @relation(fields: [ownerId], references: [id])
  rooms Room[]
}

model Room {
  id                 Int      @id @default(autoincrement())
  houseId            Int
  name               String
  price              Float
  isLocked           Boolean  @default(false)
  imageUrl           String?
  electricMeterAfter Float    @default(0)
  electricMeterNow   Float    @default(0)
  waterMeterAfter    Float    @default(0)
  waterMeterNow      Float    @default(0)
  constractEnd       DateTime
  constractStart     DateTime
  createdAt          DateTime @default(now())

  house            BoardingHouse   @relation(fields: [houseId], references: [id])
  invoices         Invoice[]
  roomServices     RoomService[]
  tenants          Tenant[]
  rentalContracts  RentalContract[]
}

model RentalContract {
  id        Int      @id @default(autoincrement())
  tenantId  Int
  roomId    Int
  startDate DateTime
  endDate   DateTime?
  terms     String?
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id])
  room   Room   @relation(fields: [roomId], references: [id])

  @@index([tenantId])
  @@index([roomId])
}

model Service {
  id          Int              @id @default(autoincrement())
  name        String           @unique
  description String?
  price       Float
  priceType   ServicePriceType @default(FIXED)
  unit        String?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  roomServices RoomService[]
}

model RoomService {
  id        Int      @id @default(autoincrement())
  roomId    Int
  serviceId Int
  price     Float
  createdAt DateTime @default(now())

  room    Room    @relation(fields: [roomId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([roomId, serviceId])
  @@index([roomId])
  @@index([serviceId], map: "RoomService_serviceId_fkey")
}

model Invoice {
  id           Int           @id @default(autoincrement())
  roomId       Int
  tenantId     Int
  roomPrice    Float
  electricCost Float
  waterCost    Float
  serviceCost  Float
  totalAmount  Float
  status       InvoiceStatus @default(PENDING)
  month        Int
  year         Int
  createdAt    DateTime      @default(now())

  room     Room     @relation(fields: [roomId], references: [id])
  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  payments Payment[]

  @@unique([roomId, month, year])
}

model Payment {
  id         Int           @id @default(autoincrement())
  invoiceId  Int
  method     PaymentMethod
  amount     Float
  proofImage String?
  confirmed  Boolean       @default(false)
  createdAt  DateTime      @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  content   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Report {
  id        Int          @id @default(autoincrement())
  senderId  Int
  target    String
  content   String
  images    Json?
  status    ReportStatus @default(PENDING)
  createdAt DateTime     @default(now())

  sender User @relation(fields: [senderId], references: [id])
}

model ReportAdmin {
  id        Int          @id @default(autoincrement())
  senderId  Int
  target    String
  content   String
  images    Json?
  status    ReportStatus @default(REVIEWING)
  createdAt DateTime     @default(now())

  sender Owner @relation(fields: [senderId], references: [id])

  @@index([senderId], map: "ReportAdmin_senderId_fkey")
}

model LicenseKey {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Subscription {
  id          Int                @id @default(autoincrement())
  plan        SubscriptionPlan
  amount      Float
  currency    String             @default("VND")
  status      SubscriptionStatus @default(ACTIVE)
  purchasedAt DateTime           @default(now())
  periodStart DateTime
  periodEnd   DateTime
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
}